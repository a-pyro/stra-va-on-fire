{
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.fixAll": "always",
    // "source.organizeImports": "always", // conflicts with vercel style guide, handled with eslint-plugin-unused-imports to remove unused and the sorting is handled by vercel style guide
    "source.fixAll.tslint": "always"
  },
  "i18n-ally.localesPaths": ["i18n/locales"],
  "i18n-ally.sourceLanguage": "english",
  "i18n-ally.keystyle": "nested",
  "i18n-ally.enabledFrameworks": ["react", "react-i18next"],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "tailwindCSS.classAttributes": [
    "className",
    "class",
    "classValue",
    "innerClassValue",
    "outerClassValue"
  ]
}
